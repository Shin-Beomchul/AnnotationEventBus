<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fragmentHome1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragmentHome2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1">
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fragmentHome3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </FrameLayout>


        <FrameLayout
            android:id="@+id/fragmentHome4"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1">

        </FrameLayout>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <Button
            android:text="BRODCAST"
            android:id="@+id/btnBrodCast"
            android:layout_width="100dp"
            android:layout_height="50dp"/>

        <Button
            android:text="Object Match Event"

            android:id="@+id/btnObjectMatch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <Button
            android:text="clean"
            android:id="@+id/btnclean"
            android:layout_width="100dp"
            android:layout_height="50dp"/>


    </LinearLayout>




</LinearLayout>
